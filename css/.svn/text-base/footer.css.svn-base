.footer{
	overflow: hidden;
	height: 150px;
	background: #f5f5f5;
	color: rgb(128, 128, 128);
	font-size: 14px;
}
.footer h3{
	color: rgb(34, 149, 232);
	font-size: 22px;
	margin: 5px 0px;
}
.ft-l{
	float: left;
	margin-left: 196px;
	margin-top: 36px;
}
.ft-r{
	margin-top: 36px;
	float: right;
	margin-right: 196px;
}
.icon-box{
	overflow: hidden;
	margin-bottom: 15px;
}
.icon-box i{
	float: right;
	width: 32px;
	height: 32px;
	margin-left: 10px;
	background: url(../img/10010.png) -64px -64px;
}
.icon-box i:nth-child(3){
	background: url(../img/10010.png) -0px -64px;
}
.icon-box i:nth-child(2){
	background: url(../img/10010.png) -32px -64px;
}
.icon-box i:nth-child(1){
	background: url(../img/10010.png) -256px -64px;
}
@media  screen  and (max-width: 640px) {
	.ft-l,.ft-r{
		float: none;
		margin: 0;
		text-align: center;
	}
	.ft-l p{
		margin-top: 10px;
	}
	.footer h3{
		display: none;
	}
	.icon-box i{
		float: none;
		display: inline-block;
		margin-top: 10px;
	}
	
}