.main-r-hd .line{
	transition: all 1.5s;
}
.main-r-hd:hover .line{
	width: 210px;
}
.list-l{
	float: left;
	width: 300px;
	height: 150px;
	background: url(../img/a1.webp) no-repeat center center/100% 100%;
	transition: all 1.5s;
}
.main-r-list li:hover .list-l{
	background: url(../img/a1.webp) no-repeat center center/120% 120%;	
}
.main-r-list li {
    float: none;
    margin-right: 0px;
    text-align:left;
    margin-top: 20px;
}
.main-r-list{
	margin-top: 0px;
}
.main-r-list li:nth-child(2) .list-l{
	background: url(../img/a2.webp) no-repeat center center/100% 100%;
}
.main-r-list li:nth-child(2):hover .list-l{
	background: url(../img/a2.webp) no-repeat center center/120% 120%;
}
.list-r{
	float: right;
	width: 610px;
}
.list-r h3{
	color: #666;
	font-size: 16px;
}
.list-r .line{
	width: 0px;
	transition: width 1.8s;
	margin: 10px 0px 5px;
}
.main-r-list li:hover .line{
	width: 610px;
}
.list-r span{
	font-size: 12px;
	color: #999;
}
.list-r p{
	font-size: 12px;
	color: #666;
}
.list-r u{
	font-size: 12px;
	color: #666;
	text-decoration: none;
	float: right;
	margin-right: 20px;
	margin-top: 30px;
	margin-bottom: 30px;
}
.main-r-list li{
	border-bottom: solid 1px#ccc;
	overflow: hidden;
	
}
@media  screen and (max-width: 640px) {
	.list-r{
		float: none;
		width: 100%;
	}
	.list-l{
		float: none;
	}
	.list-r h3{
		margin-top: 30px;
	}
	.main-r-list li{
		margin-top: 0;
	}
}